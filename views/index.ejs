<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
<h1> Opponents List</h1>

    <div >
    <%for(x=0;x<scorearray.length;x++){%>
      <div style="display:flex;">
        <div style="width: 150px;">
          <h3><a href="/score/<%=scorearray[x].id%>"><%=scorearray[x].oppname%></a></h3>
          <div><h3><%=scorearray[x].date%> </h3></div>
        </div>
        <div style="width: 150px;">
          <h3><a href="/score/<%=scorearray[x].id%>/edit">Edit</a></h3>
        </div>
        <div>
          <h3>
            <form action="/score/<%=scorearray[x].id%>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" />
            </form>
          </h3>
        </div>
      </div>
    <%}%>
    </div>
    <a href="/score/new">Add Scores?</a>

  </body>
</html>
